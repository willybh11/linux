/dts-v1/;

#include "zynq-zed.dtsi"
#include "zynq-zed-adv7511.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	vref: regulator-vref {
		compatible = "regulator-fixed";
		regulator-name = "fixed-supply";
		regulator-min-microvolt = <3600000>;
		regulator-max-microvolt = <3600000>;
		regulator-always-on;
	};

	clocks {
		ad7779_mclk: clock@0 {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <2048000>;
		};
	};
};

&fpga_axi {
	rx_dma: rx-dmac@0x7c480000 {
		compatible = "adi,axi-dmac-1.00.a";
		reg = <0x7c480000 0x10000>;
		#dma-cells = <1>;
		interrupts = <0 54 IRQ_TYPE_LEVEL_HIGH>;
		clocks = <&clkc 16>;

		adi,channels {
			#size-cells = <0>;
			#address-cells = <1>;

			dma-channel@0 {
				reg = <0>;
				adi,source-bus-width = <256>;
				adi,source-bus-type = <2>;
				adi,destination-bus-width = <64>;
				adi,destination-bus-type = <0>;
			};
		};
	};

	axi_adc_ad7779: cf_axi_ad777x@43c00000 {
		compatible = "adi,axi-adc-10.0.a";
		reg = <0x43c00000 0x10000>;
		dmas = <&rx_dma 0>;
		dma-names = "rx";
		spibus-connected = <&ad7779>;
	};
};

&spi0 {
	status = "okay";

	ad7779: adc@0 {
		compatible = "adi,ad7779";
		reg = <0>;
		spi-max-frequency = <1000000>;

		vref-supply = <&vref>;
		
		startn-gpios = <&gpio0 87 GPIO_ACTIVE_LOW>;
		resetn-gpios = <&gpio0 93 GPIO_ACTIVE_LOW>;

		clocks = <&ad7779_mclk>;
		clock-names = "mclk";
	};
};
